      "module": "es6",
      "target": "es5",
      "outDir": "./build/",
      "sourceMap": true,
      "lib": ["es6", "dom"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*"
